<Window x:Class="CarShop.Views.ClientAddEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarShop.Views"
        mc:Ignorable="d"
        Title="Add or Edit Client" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="button" Content="Add"  Foreground="DarkGreen" BorderBrush="DarkGreen" Background="White" HorizontalAlignment="Left" 
                Margin="81,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.822,4.72" Height="31" Width="118" Click="button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,26,0,0" TextWrapping="Wrap" Text="Client name" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="18,42,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="20" Width="244"/>
        
    </Grid>
</Window>
